# MQTT Broker Configuration
# For Docker: use mqtt://mqtt:1883 or mqtts://mqtt:8883 (with TLS)
# For local: use mqtt://localhost:1883 or mqtts://localhost:8883 (with TLS)
MQTT_BROKER=mqtt://mqtt:1883
MQTT_USERNAME=admin
MQTT_PASSWORD=admin
MQTT_CLIENT_ID=meshtastic-logger

# Meshtastic Topic Configuration
MESHTASTIC_ROOT_TOPIC=msh/US/#

# TLS/PSK Configuration (optional)
# Set to true to enable TLS encryption
MQTT_USE_TLS=false

# Option A: Pre-Shared Key (PSK) Authentication
# PSK key in hexadecimal format (e.g., 32-byte key = 64 hex characters)
MQTT_PSK_KEY=
# PSK identity string (username for PSK)
MQTT_PSK_IDENTITY=

# Option B: Certificate-based TLS (alternative to PSK)
# Paths to certificate files (leave empty if using PSK)
MQTT_CA_PATH=
MQTT_CERT_PATH=
MQTT_KEY_PATH=
# Set to false to allow self-signed certificates (not recommended for production)
MQTT_REJECT_UNAUTHORIZED=true

# Database Configuration
# For Docker: DB_HOST=mysql
# For local: DB_HOST=localhost
DB_HOST=mysql
DB_PORT=3306
DB_USER=meshtastic
DB_PASSWORD=meshtastic
DB_DATABASE=meshtastic
